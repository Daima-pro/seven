.avater{
  width: 90%;
  margin: auto;
  height: 300rpx;
  position: relative;
}
.avater image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.avatercontent{
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  color: white;
}
.avatertextOne{
  font-size: 23rpx;
  line-height: 40rpx;
  /* margin-top: 20rpx; */
}
.avatertitle{
  font-weight: 900;
}
.avatertext{
  font-size: 25rpx;
  line-height: 40rpx;
}

.about{
  width: 100rpx;
  height: 50rpx;
